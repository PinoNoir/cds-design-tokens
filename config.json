{
  "source": [
    "tokens/bcc/**/*.json",
    "tokens/bcc/foundations/*.json",
    "tokens/bcc/components/*.json"
  ],
  "platforms": {
    "css": {
      "transforms": ["attribute/cti", "name/cti/kebab", "color/hsl", "size/rem", "content/icon"],
      "transformGroup": "css",
      "buildPath": "build/css/",
      "prefix": "cds",
      "files": [{
        "destination": "colors.css",
        "format": "css/variables",
        "filter": {
          "attributes": {
            "category": "color"
          }
        }
      },{
        "destination": "sizes.css",
        "format": "css/variables",
        "filter": {
          "attributes": {
            "category": "size"
          }
        }
      },{
        "destination": "spacing.css",
        "format": "css/variables",
        "filter": {
          "attributes": {
            "category": "spacing"
          }
        }
      },{
        "destination": "typography.css",
        "format": "css/variables",
        "filter": {
          "attributes": {
            "category": "font"
          }
        }
      },{
        "destination": "button.css",
        "format": "css/variables",
        "filter": {
          "attributes": {
            "category": "button"
          }
        }
      },{
        "destination": "input.css",
        "format": "css/variables",
        "filter": {
          "attributes": {
            "category": "input"
          }
        }
      }]
    },
    "scss": {
      "transforms": ["attribute/cti", "name/cti/kebab", "color/hsl", "size/rem", "content/icon"],
      "transformGroup": "scss",
      "buildPath": "build/scss/",
      "prefix": "cds",
      "files": [{
        "destination": "_colors.scss",
        "format": "scss/variables",
        "filter": {
          "attributes": {
            "category": "color"
          }
        }
      },{
        "destination": "_sizes.scss",
        "format": "scss/variables",
        "filter": {
          "attributes": {
            "category": "size"
          }
        }
      },{
        "destination": "_spacing.scss",
        "format": "scss/variables",
        "filter": {
          "attributes": {
            "category": "spacing"
          }
        }
      },{
        "destination": "_typography.scss",
        "format": "scss/variables",
        "filter": {
          "attributes": {
            "category": "font"
          }
        }
      },{
        "destination": "_button.scss",
        "format": "scss/variables",
        "filter": {
          "attributes": {
            "category": "button"
          }
        }
      },{
        "destination": "_input.scss",
        "format": "scss/variables",
        "filter": {
          "attributes": {
            "category": "input"
          }
        }
      }]
    },
    "assets/embed/css": {
      "transforms": ["attribute/cti","name/cti/kebab", "content/icon", "asset/base64"],
      "buildPath": "build/css/",
      "prefix": "cds",
      "files": [{
        "destination": "icons.css",
        "format": "css/variables",
        "filter": {
          "attributes": {
            "category": "asset",
            "type": "icon"
          }
        }
      },{
        "destination": "images.css",
        "format": "css/variables",
        "filter": {
          "attributes": {
            "category": "asset",
            "type": "image"
          }
        }
      }]
    }
  }
}
